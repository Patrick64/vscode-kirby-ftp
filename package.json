{
  "name": "kirby-ftp",
  "displayName": "Kirby FTP",
  "description": "Safely sync & compare FTP",
  "version": "0.0.1",
  "publisher": "kirbydigital",
  "engines": {
    "vscode": "^1.43.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.sayHello",
    "onView:compareView",
    "activationEvents",
    "workspaceContains:.vscode/kirby-ftp/.kirby-ftp-config",
    "onCommand:kirby.openConfig"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      },
      {
        "command": "kirby.openConfig",
        "title": "Setup",
        "category": "Kirby FTP"
      },
      {
        "command": "kirby.uploadFile",
        "title": "Upload File",
        "category": "Kirby FTP"
      },
      {
        "command": "kirby.openFile",
        "title": "Open File",
        "category": "Kirby FTP"
      },
      {
        "command": "compareView.refreshEntry",
        "title": "Refresh All",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "Kirby FTP"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "compareView",
          "name": "Kirby FTP"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "compareView.refreshEntry",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_equal"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_localOnly"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_remoteChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_localChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_unequal"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_bothChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == file_conflict"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_equal"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_localOnly"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_remoteChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_localChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_unequal"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_bothChanged"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == folder_conflict"
        },
        {
          "command": "kirby.uploadFile",
          "when": "view == compareView && viewItem == profile_node"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "update-docs": "./node_modules/typedoc/bin/typedoc --out docs/typedoc src && echo \"\" > ./docs/.nojekyll",
    "test-ftp": "node ./node_modules/ftp-srv/bin/index.js ftp://127.0.0.1:2121 --pasv_url 127.0.0.1 --root ../test-ftp"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.43.0",
    "ftp-srv": "^4.3.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "ftp": "^0.3.10",
    "path-is-inside": "^1.0.2",
    "promise-pause": "^1.0.2"
  }
}
