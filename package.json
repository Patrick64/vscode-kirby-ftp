{
  "name": "kirby-ftp",
  "displayName": "Kirby FTP",
  "description": "Safely sync & compare FTP",
  "version": "0.0.1",
  "publisher": "kirbydigital",
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.sayHello",
    "onView:compareView",
    "activationEvents",
    "workspaceContains:.vscode/kirby-ftp/.kirby-ftp-config" ,
    "onCommand:kirby.openConfig" 
  ],
  "main": "./out/extension",

  "contributes": {
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      },
      {
        "command": "kirby.openConfig",
        "title": "Setup",
        "category": "Kirby FTP"
      },
      {
				"command": "compareView.refreshEntry",
				"title": "Refresh All",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
        },
        "category": "Kirby FTP"
			}
    ],
    "views": {
      "explorer": [
        {
          "id": "compareView",
          "name": "Kirby FTP"
        }
      ]
    },
    "menus": {
			"view/title": [
        {
					"command": "compareView.refreshEntry",
					
					"group": "navigation"
				}
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "ftp": "^0.3.10"
  }
}
